---
import { Code } from 'astro/components';
import CopyButton from './CopyButton.svelte'

interface Props {
  code?: string;
  hideCopyButton?:boolean
}

const { code , hideCopyButton} = Astro.props;

---

<CopyButton text={code} {hideCopyButton} client:load>
    <Code code={code} theme={'slack-dark'} wrap={true} lang="ts" />
</CopyButton>

<style>
  :global(pre){
    max-width: 1000px !important;
  }
</style>